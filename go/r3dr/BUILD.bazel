load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "r3dr_lib",
    srcs = [
        "config.go",
        "dto.go",
        "main.go",
        "ping.go",
        "short_db.go",
        "shorten.go",
    ],
    importpath = "github.com/muchq/moonbase/go/r3dr",
    visibility = ["//visibility:private"],
    deps = ["@com_github_go_sql_driver_mysql//:mysql"],
)

go_binary(
    name = "r3dr",
    embed = [":r3dr_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "shorten_test",
    size = "small",
    srcs = ["shorten_test.go"],
    embed = [":r3dr_lib"],
)
